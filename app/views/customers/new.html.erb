<h2 class="mb-5 fw-bold">Welcome to Yellow!</h2>
<h4 class="mb-3">Please enter your details to get started.</h4>
<% if flash[:alert].present? %>
    <div class="alert alert-danger">
        <%= flash[:alert] %>
    </div>
<% end %>

<% if @customer.errors.any? %>
    <div class="alert alert-danger">
        <% @customer.errors.full_messages.each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>
<% end %>

<%= form_for @customer do |f| %>
    <div class="row gy-3">
        <div class="col-md-6">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, placeholder: "Mike", required: true, class: "form-control" %>
        </div>
        <div class="col-md-6">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, placeholder: "Heyink", required: true, class: "form-control" %>
        </div>
        <div class="col-md-6">
            <%= f.label :phone %>
            <br>
            <%= f.text_field :phone, required: true, class: "intl-phone" %>
        </div>
        <div class="col-md-6">
            <%= f.label :birthday %>
            <%= f.date_field :birthday, placeholder: "2000-1-1", required: true, class: "form-control" %>
        </div>
        <div class="col-md-6">
            <%= f.label :id_number, "ID Number" %>
            <%= f.text_field :id_number, placeholder: "2000010101000", required: true, class: "form-control" %>
        </div>
        <hr>
        <h4>Now some details about your new phone price:</h4>
        <div class="col-md-6">
            <%= f.label :registration_phone_price, "Currency" %>
            <br>
            <%= select :customer, :registration_phone_price_currency, options_for_select(@currencies, @default_currency), { }, class: "form-control", required: true %>
        </div>
        <div class="col-md-6">
            <%= f.label :registration_phone_price, "Amount in cents" %>
            <%= f.number_field :registration_phone_price_cents, placeholder: 10000, min: 1, required: true, class: "form-control" %>
            <p class="small fst-italic text-muted">Make sure to enter this number in cents. For example, $1.37 would be "137".</p>
        </div>
        <div class="col">
            <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
        </div>
    </div>
<% end %>
