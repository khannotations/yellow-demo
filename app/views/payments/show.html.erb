<% if @payment.status == "paid" %>
  <h4>Congratulations, your payment was successful!</h4>
<% elsif @payment.status == "failed" %>
  <h4>Oh no, your payment failed :(</h4>
<% else %>
  <h4>Your payment is still pending...</h4>
<% end %>

<%= render "customers/info", customer: @customer %>

<%= link_to "Create a new customer", new_customer_path, class: "btn btn-secondary btn-lg" %>