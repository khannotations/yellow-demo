<h3 class="mb-4">Thanks for joining <%= @customer.first_name %>! You've been approvedâ€”time to link your phone.</h3>

<%= render "customers/info", customer: @customer %>

<% if flash[:alert].present? %>
    <div class="alert alert-danger">
        <%= flash[:alert] %>
    </div>
<% end %>

<% if @phone.errors.any? %>
    <div class="alert alert-danger">
        <% @phone.errors.full_messages.each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>
<% end %>

<%= form_for [@customer, @phone] do |f| %>
    <div class="row gy-3">
        <div class="col-12">
            <h4 class='mb-3'>New phone IMEI</h4>
            <%= f.text_field :imei, placeholder: "307543415456705", required: true, class: "form-control form-control-lg" %>
        </div>
        <div class="col-12">
            <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
        </div>
    </div>
<% end %>
